{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "platforms": ["linux", "macOS", "windows"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:webview:default",
    "opener:default",
    "shell:default",
    "shell:allow-execute",
    "shell:allow-spawn",
    "dialog:default",
    "core:path:default",
    "core:event:default",
    "core:event:allow-listen",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": true,
          "name": "bin/ffmpeg",
          "sidecar": true
        }
      ]
    }
  ]
}